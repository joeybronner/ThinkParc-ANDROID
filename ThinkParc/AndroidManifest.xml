<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.thinkparc.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="fr.thinkparc.util.LaunchApp"
        android:allowBackup="true"
        android:icon="@drawable/logo_thinkparc"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- Splash Screen -->
        <activity
            android:name=".SplashScreen"
            android:label="@string/title_activity_splash_screen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.thinkparc.subparts.VehiclesActivity"
            android:label="@string/title_activity_vehicles"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.thinkparc.app.HomeActivity" />
        </activity>
        <activity
            android:name=".AuthenticationActivity"
            android:label="@string/title_activity_authentication" >
        </activity>
        <activity
            android:name="fr.thinkparc.subparts.MaintenanceActivity"
            android:label="@string/title_activity_maintenance"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.thinkparc.app.HomeActivity" />
        </activity>
        <activity
            android:name="fr.thinkparc.subparts.MaintenanceStockActivity"
            android:label="@string/title_activity_maintenance_stock"
            android:parentActivityName="fr.thinkparc.subparts.MaintenanceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.thinkparc.subparts.MaintenanceActivity" />
        </activity>
        <activity
            android:name="fr.thinkparc.subparts.MaintenanceSiteActivity"
            android:label="@string/title_activity_maintenance_site"
            android:parentActivityName="fr.thinkparc.subparts.MaintenanceStockActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.thinkparc.subparts.MaintenanceStockActivity" />
        </activity>
    </application>

</manifest>
