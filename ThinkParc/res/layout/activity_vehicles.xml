<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/think_parc_vehicles_4"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="fr.thinkparc.subparts.VehiclesActivity" >

        <!-- Plate number -->

        <TextView
            android:id="@+id/tvPlateNr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Select a vehicle"
            style="@style/tvStyleTitle" />

        <Spinner
            android:id="@+id/spinnerVehicles"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/spinner_height"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tvPlateNr"
            android:background="@color/white_transparency" />

        <!-- Serial number -->
        
        <TextView
            android:id="@+id/tvSerialNr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinnerVehicles"
            android:text="Serial number"
            style="@style/tvStyleTitle" />

        <TextView
            android:id="@+id/tvSerialNr_val"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tv_height"
            android:layout_below="@id/tvSerialNr"
            android:text="-"
            style="@style/tvStyleValues" />

        <!-- Buying date -->

        <TextView
            android:id="@+id/tvBuyingDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSerialNr_val"
            android:text="Buying date"
            style="@style/tvStyleTitle" />

        <TextView
            android:id="@+id/tvBuyingDate_val"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tv_height"
            android:layout_below="@id/tvBuyingDate"
            android:text="JJ/MM/AAAA"
            style="@style/tvStyleValues" />

        <!-- First circulation date -->

        <TextView
            android:id="@+id/tvCirculationDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBuyingDate_val"
            android:text="First circulation date"
            style="@style/tvStyleTitle" />

        <TextView
            android:id="@+id/tvCirculationDate_val"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tv_height"
            android:layout_below="@id/tvCirculationDate"
            android:text="JJ/MM/AAAA"
            style="@style/tvStyleValues" />
    </RelativeLayout>

</ScrollView>